{
  "name": "node-express-typescript-starter",
  "version": "1.0.0",
  "description": "A starter project using nodejs, express and typescript",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run copy-static-assets",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently \"npm run watch-ts\" \"npm run serve\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "copy-static-assets": "node copyStaticAssets.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "start.prod": "node dist/server.js"
  },
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:atecey/node-express-typescript-starter.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "typescript",
    "REST",
    "API",
    "boilerplate",
    "generator",
    "starter project"
  ],
  "dependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.0.39",
    "@types/node": "^8.0.53",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "nodemon": "^1.12.1",
    "shelljs": "^0.7.8",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
